{
  "name": "shadow_diary",
  "version": "0.1.5",
  "description": "A simple diary app",
  "main": "./out/main/index.js",
  "author": "HsYr",
  "homepage": "https://electron-vite.org",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "check:node": "node -e \"const [major, minor] = process.versions.node.split('.').map(Number); if (major < 20 || (major === 20 && minor < 19)) { console.error('Node.js >= 20.19.0 is required. Current: ' + process.versions.node); process.exit(1) }\"",
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "npm run check:node && electron-vite preview",
    "dev": "npm run check:node && electron-vite dev",
    "build": "npm run check:node && npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "release": "npm run build && electron-builder --win --publish always",
    "build:win:msi": "npm run build && electron-builder --win msi",
    "build:win:all": "npm run build && electron-builder --win nsis msi"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "better-sqlite3": "^12.6.2",
    "electron-updater": "^6.3.9",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.19.1",
    "@types/uuid": "^10.0.0",
    "@vicons/ionicons5": "^0.13.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "echarts": "^6.0.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.6.2",
    "froala-editor": "^5.0.0",
    "icon-gen": "^5.0.0",
    "naive-ui": "^2.43.2",
    "pinia": "^3.0.4",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vue": "^3.5.25",
    "vue-echarts": "^8.0.1",
    "vue-eslint-parser": "^10.2.0",
    "vue-froala-wysiwyg": "^5.0.0",
    "vue-router": "^4.6.4",
    "vue-tsc": "^3.1.6"
  }
}
